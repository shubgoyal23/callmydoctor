{
  "compilerOptions": {
    "target": "ES2020", // or "ES2015" or higher
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "ES2020"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": [
    "src"
  ]
}